<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="#F2EB88" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="match_parent" android:id="@+id/actionbar" android:layout_height="40dp" android:background="#2F6571">
        <ImageView android:scaleType="centerInside" android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/icon" android:id="@+id/actionbarhome" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></ImageView>
        <TextView android:id="@+id/actionbartitle" android:textAppearance="?android:attr/textAppearanceLarge" android:textColor="#fff" android:text="Monitor Manager" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerVertical="true" android:layout_toRightOf="@+id/actionbarhome" android:shadowRadius="2" android:shadowColor="#000" android:textStyle="normal"></TextView>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:id="@+id/titlebar" android:layout_height="wrap_content" android:background="#8897638A" android:visibility="gone">
        <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:text="Monitoring" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:id="@+id/enabled"></TextView>
    </RelativeLayout>
    <ScrollView android:layout_width="match_parent" android:id="@+id/scrollView1" android:layout_height="match_parent">
        <LinearLayout android:id="@+id/monitorentries" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        </LinearLayout>
    </ScrollView>
</LinearLayout>